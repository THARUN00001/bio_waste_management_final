<form action="/orderReceived" method="post">

<div class="row">
    <div class="col-lg-4">
        <div class="input-group mb-3">
            <div class="form-floating">
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Select Plant
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                      <a class="dropdown-item" href="#">Action</a>
                      <a class="dropdown-item" href="#">Another action</a>
                      <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                  </div>        
            </div>
          </div>
    </div>
</div>

<div class="row" style="justify-content: center;">
<div class="col-lg-8">
    <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Type of waste</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price (in INR)</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">1</th>
            <td>Mark</td>
            <td> <input style="width: 50px ;" id="q1" type="text" onchange="myFunction(this.value, this.id)"> </td>
            <td> <span id="q1d"> 0 </span> x 300 =  <span id="q1td"> 0 </span> </td>
          </tr>
          <tr>
            <th scope="row">2</th>
            <td>Jacob</td>
            <td> <input id="q2" type="text" onchange="myFunction(this.value, this.id)"> </td>
            <td> <span id="q2d"> 6 </span> x 300 =  <span id="q2td">  </span> </td>
          </tr>
          <tr>
            <th scope="row">3</th>
            <td colspan="2">Larry the Bird</td>
            <td>100</td>
          </tr>
        </tbody>
      </table>
</div>
</div>

</form>

<script>
    function myFunction(val, id) {
        const qValue = document.getElementById(id);

        document.getElementById(id+"d").innerHTML = val ;
        document.getElementById(id+"td").innerHTML = val*300 ;
}
</script>

